
<div class="segment" id="segment-{{id}}">
    <div class="form-group col-xs-3">
        <label  for="from-{{id}}">From</label>
        <input data-attr="from" type="text" class="form-control" id="from-{{id}}" placeholder="From" value="{{from}}">
    </div>
    <div class="form-group col-xs-3">
        <label  for="to-{{id}}">To</label>
        <input data-attr="to" type="text" class="form-control" id="to-{{id}}" placeholder="to" value="{{to}}">
    </div>
    <div class="form-group col-xs-3">
        <label  for="class-{{id}}">Flight No</label>
        <input data-attr="flightNumber" type="text" class="form-control" id="flight-number-{{id}}" placeholder="Flight Number" value="{{flightNumber}}">
    </div>
    <div class="form-group col-xs-3">
        <label  for="class-{{id}}">class</label>
        <input data-attr="clazz" type="text" class="form-control" id="clazz-{{id}}" placeholder="class" value="{{clazz}}">
    </div>
</div>

